<div class = "container">
  <h1>To-Do List</h1>
  <br>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
        <%= link_to '<i class="fa-regular fa-pen-to-square"></i>'.html_safe, edit_task_path(task) %>
        <%= link_to '<i class="fa-regular fa-trash-can"></i>'.html_safe, task,   data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <span> - </span><%= link_to task.title, task_path(task) %>
      </li>
    <% end%>
  </ul>

    <%= link_to 'Add a new task', new_task_path, class: "btn btn-dark" %>

</div>
